# Environment Variables for Nginx Proxy Manager Deployment
# Copy this to .env.production on your server

# MySQL Configuration
MYSQL_ROOT_PASSWORD=change_this_root_password_123
MYSQL_DATABASE=shifttrackpro
MYSQL_USER=shifttrack
MYSQL_PASSWORD=change_this_mysql_password_456

# Backend Configuration
NODE_ENV=production
PORT=3000

# Database Connection (for backend)
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=shifttrack
DB_PASSWORD=change_this_mysql_password_456
DB_DATABASE=shifttrackpro

# JWT Configuration
JWT_SECRET=change_this_jwt_secret_min_32_characters_xyz789
JWT_EXPIRES_IN=24h

# CORS Origins (your frontend domains - comma separated)
CORS_ORIGINS=https://shifttrackpro.yourdomain.com,http://localhost:3001

# Frontend API URL (will be configured in Nginx Proxy Manager)
VITE_API_URL=https://api.yourdomain.com

# phpMyAdmin Configuration
UPLOAD_LIMIT=50M
